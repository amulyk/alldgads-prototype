{
  "extends": "stylelint-config-airbnb",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "string-quotes": "single",
    "rule-empty-line-before": ["always", {
      "except": [
        "first-nested"
      ]
    }],
    "at-rule-empty-line-before": ["always", {
      "except": [
        "first-nested",
        "blockless-after-blockless"
      ]
    }],
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true
  }
}
